# ==============================================================================
# E-Commerce Platform - Environment Configuration Example
# ==============================================================================
# Copy this to .env and replace placeholder values.
# For production, see infrastructure/env/.env.vault.template for Vault setup.
# ==============================================================================

# ==============================================================================
# VAULT (Optional - for production)
# ==============================================================================
USE_VAULT=false
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your-vault-token

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# DATABASE
# ==============================================================================
POSTGRES_DB=ecommerce
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/ecommerce

# ==============================================================================
# CACHE & QUEUE
# ==============================================================================
REDIS_PASSWORD=changeme
REDIS_URL=redis://:changeme@localhost:6379/0
CELERY_BROKER_URL=redis://:changeme@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:changeme@localhost:6379/0

# ==============================================================================
# SECURITY
# ==============================================================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=changeme-generate-a-secure-key

# Service auth secrets (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SERVICE_AUTH_SECRET_DJANGO_BACKEND=changeme
SERVICE_AUTH_SECRET_API_GATEWAY=changeme
SERVICE_AUTH_SECRET_CELERY_WORKER=changeme

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# ==============================================================================
# OPTIONAL
# ==============================================================================
ELASTICSEARCH_URL=http://localhost:9200
SENTRY_DSN=
FRONTEND_URL=http://localhost:3000
